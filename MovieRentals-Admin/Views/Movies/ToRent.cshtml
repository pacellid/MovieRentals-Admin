
@*
    create a form,
    a list of checkboxes where each checkbox is a movie from the "movies" List,
    users will select the movies they'd like to rent,
    users will then press a submit button,
    returning a results page displaying: movies rented, date rented, return date, and thank you message
*@
<div class="form-container">
    @using (Html.BeginForm("ToRent", "Movies"))
    {
        foreach (var movie in ViewBag.MoviesToRent)
        {
            <div class="checkbox">
                <label>
                    <input type="checkbox"
                           name="SelectedMovies"
                           value="@movie.MovieTitle">@movie.MovieTitle
                </label>
            </div>
        }
        <div class="submit-button">
            <input class="btn" type="submit" value="Rent Movies" />
        </div>
    }

</div>
